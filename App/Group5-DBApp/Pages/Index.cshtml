@page
@using Group5_DBApp.Models
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Group 5 - Online Shopping Application</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <header>
        <h1>Welcome to Our Online Store</h1>
    </header>

    <main>
        <!-- Search Bar -->
        <section class="search-products">
        <form method="GET">
            <input type="text" name="search" placeholder="Search products..." value="@Model.SearchTerm">
            <button type="submit">Search</button>
        </form>
        </section>
        <section class="featured-products">
            <h2>Featured Products</h2>
            <!-- Display products that are $50 or more in price -->
            @foreach (var product in Model.Products.Where(p => p.price >= 50))
            {
                <div class="product-card">
                <h3>@product.prod_name</h3>
                <p>$@product.price</p>
                <button>Add to Cart</button>
                </div>
            }
        </section>
    </main>
</body>
</html>

